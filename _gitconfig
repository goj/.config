[user]
	name = Krzysztof Goj
	email = krzysztof.goj@erlang-solutions.com

[diff]
	renames = true

[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto

[alias]
	# hg/svn habits
	st = status
	ci = commit -v
	co = checkout
	br = branch
	cat = show
	serve = daemon --reuseaddr --base-path=. --export-all --verbose

	# diff magic
	staged = diff --cached
	unstaged = diff

	# commit magic
	cia = commit -av
	fbi = commit -a --amend -C HEAD

	# other magic
	ri = rebase --interactive

# un-retard git pull :>
[branch "master"]
	remote = origin
	merge = refs/heads/master
