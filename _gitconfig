[alias]
    # hg/svn habits
	st = status
	ci = commit
	co = checkout
	br = branch

    # diff magic
	staged = diff --cached
	unstaged = diff

    # commit magic
	civ = commit -v
	cia = commit -av
    fbi = commit -a --amend -C HEAD

    # other magic
    ri = rebase --interactive
